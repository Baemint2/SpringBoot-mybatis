<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moz1mozi.mybatis.dao.BoardDao">
    <insert id="insertBoard"
            parameterType="com.moz1mozi.mybatis.dto.BoardDto">
        <selectKey keyProperty="board_no" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO BOARD_T (
            TITLE,
            CONTENTS,
            MODIFIED_AT,
            CREATED_AT
        ) VALUES (#{title}, #{contents}, NOW(), NOW())
    </insert>

    <update id="updateBoard"
            parameterType="com.moz1mozi.mybatis.dto.BoardDto">
        UPDATE BOARD_T
           SET TITLE = #{title},
               CONTENTS = #{contents},
               MODIFIED_AT = NOW()
         WHERE BOARD_NO = #{board_no}
    </update>

    <delete id="deleteBoard">
        DELETE
          FROM BOARD_T
         WHERE BOARD_NO = #{board_no}
    </delete>

    <select id="getBoardCount">
        SELECT COUNT(*)
          FROM BOARD_T
    </select>

    <select id="selectBoardByNo"
            resultType="com.moz1mozi.mybatis.dto.BoardDto">
        SELECT BOARD_NO, TITLE, CONTENTS, MODIFIED_AT, CREATED_AT
          FROM BOARD_T
         WHERE BOARD_NO = #{board_no}
    </select>
</mapper>