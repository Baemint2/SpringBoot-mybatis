<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moz1mozi.mybatis.dao.member.MemberDao">
    <insert id="insertMember"
            parameterType="com.moz1mozi.mybatis.dto.MemberDto">
        <selectKey keyProperty="member_id" resultType="long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO MEMBER_T (
        USERNAME,
        PASSWORD,
        EMAIL,
        ROLE
        ) VALUES (#{username}, #{password}, #{email}, #{role, typeHandler=com.moz1mozi.mybatis.typehandler.RoleTypeHandler})
    </insert>

    <delete id="deleteMember">
        DELETE
          FROM MEMBER_T
         WHERE MEMBER_ID = #{MEMBER_ID}
    </delete>
</mapper>